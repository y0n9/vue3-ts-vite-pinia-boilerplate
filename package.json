{
    "name": "vue3-ts-vite-pinia-boilerplate",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "dev": "vite --mode development",
        "build": "run-p type-check build-only --mode production",
        "preview": "vite preview",
        "build-only": "vite build",
        "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
        "lint:comment": "使用 ESLint 检查并自动修复 src 目录下所有扩展名为 .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts 的文件",
        "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
        "format:comment": "自动格式化 src 目录下的所有文件",
        "format": "prettier --write src/",
        "commit:comment": "引导设置规范化的提交信息",
        "commit": "git-cz",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*.{vue,js,ts,jsx,tsx,md,json}": [
            "pnpm run lint",
            "pnpm run format"
        ]
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-customizable"
        }
    },
    "dependencies": {
        "@vueuse/core": "^10.3.0",
        "axios": "^1.4.0",
        "normalize.css": "^8.0.1",
        "pinia": "^2.1.4",
        "vue": "^3.3.4",
        "vue-router": "^4.2.4"
    },
    "devDependencies": {
        "@arco-design/web-vue": "^2.50.0",
        "@commitlint/cli": "^17.7.1",
        "@commitlint/config-conventional": "^17.7.0",
        "@iconify-json/bx": "^1.1.7",
        "@rushstack/eslint-patch": "^1.3.2",
        "@tsconfig/node18": "^18.2.0",
        "@types/node": "^18.17.0",
        "@typescript-eslint/eslint-plugin": "^6.4.0",
        "@typescript-eslint/parser": "^6.4.0",
        "@unocss/preset-attributify": "^0.55.1",
        "@unocss/preset-uno": "^0.55.1",
        "@unocss/transformer-directives": "^0.55.1",
        "@vitejs/plugin-vue": "^4.2.3",
        "@vue/eslint-config-prettier": "^8.0.0",
        "@vue/tsconfig": "^0.4.0",
        "commitizen": "^4.3.0",
        "commitlint-config-cz": "^0.13.3",
        "cz-conventional-changelog": "^3.3.0",
        "cz-customizable": "^7.0.0",
        "eslint": "^8.45.0",
        "eslint-plugin-vue": "^9.15.1",
        "husky": "^8.0.0",
        "lint-staged": "^14.0.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.0.0",
        "sass": "^1.65.1",
        "typescript": "~5.1.6",
        "unocss": "^0.55.1",
        "unplugin-auto-import": "^0.16.6",
        "unplugin-icons": "^0.16.5",
        "unplugin-vue-components": "^0.25.1",
        "vite": "^4.4.6",
        "vue-tsc": "^1.8.6"
    }
}
